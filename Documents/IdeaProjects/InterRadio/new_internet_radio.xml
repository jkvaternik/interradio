<?xml version="1.0" encoding="UTF-8"?>
<project name="new_internet_radio" default="all">
  
  
  <property file="new_internet_radio.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/packager.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.com.abercap:mediainfo-java-api:1.0.0.release.classpath">
    <pathelement location="${basedir}/lib/mediainfo-java-api-1.0.0.RELEASE.jar"/>
  </path>
  
  <path id="library.net.java.dev.jna:jna:3.5.2.classpath">
    <pathelement location="${basedir}/lib/jna-3.5.2.jar"/>
  </path>
  
  <path id="library.net.java.dev.jna:platform:3.5.2.classpath">
    <pathelement location="${basedir}/lib/jna-3.5.2.jar"/>
    <pathelement location="${basedir}/lib/platform-3.5.2.jar"/>
  </path>
  
  <path id="library.org.apache.commons:commons-exec:1.3.classpath">
    <pathelement location="${basedir}/lib/commons-exec-1.3.jar"/>
  </path>
  
  <path id="library.org.apache.poi:poi-ooxml:3.15.classpath">
    <pathelement location="${basedir}/lib/commons-codec-1.10.jar"/>
    <pathelement location="${basedir}/lib/commons-collections4-4.1.jar"/>
    <pathelement location="${basedir}/lib/curvesapi-1.04.jar"/>
    <pathelement location="${basedir}/lib/poi-3.15.jar"/>
    <pathelement location="${basedir}/lib/poi-ooxml-3.15.jar"/>
    <pathelement location="${basedir}/lib/poi-ooxml-schemas-3.15.jar"/>
    <pathelement location="${basedir}/lib/stax-api-1.0.1.jar"/>
    <pathelement location="${basedir}/lib/xmlbeans-2.6.0.jar"/>
  </path>
  
  <path id="library.org.slf4j:slf4j-nop:1.7.21.classpath">
    <pathelement location="${basedir}/lib/slf4j-api-1.7.21.jar"/>
    <pathelement location="${basedir}/lib/slf4j-nop-1.7.21.jar"/>
  </path>
  
  <path id="library.uk.co.caprica:vlcj:3.10.1.classpath">
    <pathelement location="${basedir}/lib/slf4j-api-1.7.10.jar"/>
    <pathelement location="${basedir}/lib/vlcj-3.10.1.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_new_internet_radio.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.new_internet_radio" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.new_internet_radio" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.interradio_alpha_1.0:jar" value="${basedir}/App_Windows"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.InterRadio Alpha 1.0.jar" value="${artifacts.temp.dir}/InterRadio Alpha 1.0.jar"/>
  </target>
  
  <target name="artifact.interradio_alpha_1.0:jar" depends="init.artifacts, compile.module.new_internet_radio" description="Build &#39;InterRadio Alpha 1.0:jar&#39; artifact">
    <property name="artifact.temp.output.interradio_alpha_1.0:jar" value="${artifacts.temp.dir}/InterRadio_Alpha_1_0_jar"/>
    <mkdir dir="${artifact.temp.output.interradio_alpha_1.0:jar}"/>
    <jar destfile="${temp.jar.path.InterRadio Alpha 1.0.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/App2/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset dir="${new_internet_radio.output.dir}"/>
      <zipfileset src="${basedir}/lib/mediainfo-java-api-1.0.0.RELEASE.jar"/>
      <zipfileset src="${basedir}/lib/commons-exec-1.3.jar"/>
      <zipfileset src="${basedir}/lib/vlcj-3.10.1.jar"/>
      <zipfileset src="${basedir}/lib/slf4j-api-1.7.10.jar"/>
      <zipfileset src="${basedir}/lib/poi-ooxml-3.15.jar"/>
      <zipfileset src="${basedir}/lib/poi-3.15.jar"/>
      <zipfileset src="${basedir}/lib/commons-codec-1.10.jar"/>
      <zipfileset src="${basedir}/lib/commons-collections4-4.1.jar"/>
      <zipfileset src="${basedir}/lib/poi-ooxml-schemas-3.15.jar"/>
      <zipfileset src="${basedir}/lib/xmlbeans-2.6.0.jar"/>
      <zipfileset src="${basedir}/lib/stax-api-1.0.1.jar"/>
      <zipfileset src="${basedir}/lib/curvesapi-1.04.jar"/>
      <zipfileset src="${basedir}/lib/platform-3.5.2.jar"/>
      <zipfileset src="${basedir}/lib/jna-3.5.2.jar"/>
      <zipfileset src="${basedir}/lib/slf4j-nop-1.7.21.jar"/>
      <zipfileset src="${basedir}/lib/slf4j-api-1.7.21.jar"/>
      <zipfileset dir="${basedir}/resources"/>
    </jar>
    <copy file="${temp.jar.path.InterRadio Alpha 1.0.jar}" tofile="${artifact.temp.output.interradio_alpha_1.0:jar}/InterRadio Alpha 1.0.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.interradio_alpha_1.0:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.interradio_alpha_1.0:jar}"/>
    <copy todir="${artifact.output.interradio_alpha_1.0:jar}">
      <fileset dir="${artifact.temp.output.interradio_alpha_1.0:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>